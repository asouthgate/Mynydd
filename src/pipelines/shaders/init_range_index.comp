#version 450
layout(local_size_x = 256) in;

layout(set = 0, binding = 0) buffer Indices {
    uint indices[];
};

layout(push_constant) uniform Params {
    uint numKeys;
} pc;

void main() {
    uint i = gl_GlobalInvocationID.x;
    indices[i] = pc.numKeys;
    if (i < pc.numKeys) {
       indices[i] = i;
    }
}